{% extends 'layout.twig' %}

{% block title %}
    {{ project.number }} - {{ project.codename }}
{% endblock %}

{% block content %}
    <a href="/dashboard">Retornar</a>
    <a href="/dashboard">Editar</a>
    <hr>
    <h2>{{ project.codename }}</h2>
    <h4>{{ project.code }}</h4>
    <p>{{ project.description }}</p>
    <hr>
    <p>{{ project.start_date }}</p>
    <p>{{ project.end_date }}</p>
    <p>{{ project.scope }}</p>
    <p>{{ project.links }}</p>
    <p>{{ project.tags }}</p>
{% endblock %}